datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserType {
  PROFESSOR
  CUIDADOR
  USUARIO
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  birthDate DateTime
  userType  UserType
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  system
  user
  assistant
}

model Message {
  id        String  @id @default(uuid())
  role      Role
  content   String
  createdAt DateTime @default(now())  
}