datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

enum UserType {
  PROFESSOR
  CUIDADOR
  RESPONSAVEL
  USUARIO
  TEA_NIVEL_1
  TEA_NIVEL_2
  TEA_NIVEL_3
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  birthDate DateTime
  userType  UserType
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  resetPasswordToken       String?   @unique
  resetPasswordTokenExpiry DateTime?
  historics Historic[]
}

enum Role {
  system
  user
  assistant
}

model Message {
  id          String      @id @default(uuid())
  role        Role
  content     String
  createdAt   DateTime    @default(now()) 
  historicId  String
  historic    Historic    @relation(fields: [historicId], references: [historicId]) 
}

model Historic {
  historicId  String    @id @default(uuid())
  startedAt   DateTime  @default(now())
  endedAt     DateTime 
  messages    Message[]
  terminated  Boolean
  userId      String
  user        User      @relation(fields: [userId], references: [id])
}

model ChatCache {
  id          String   @id @default(uuid())
  userId      String
  question    String
  answer      String
  publicKey   String
  createdAt   DateTime @default(now())
  expiresAt   DateTime

  @@index([userId, question])
}
